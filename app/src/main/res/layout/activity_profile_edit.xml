<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <ImageView
                android:id="@+id/card_picture"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:scaleType="centerCrop"
                android:src="@drawable/hamao"
                />

            <TextView
                android:id="@+id/card_work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="慶應大学"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:textAppearance="@style/profile_work"
                app:layout_constraintBottom_toBottomOf="@id/card_picture"
                app:layout_constraintStart_toStartOf="@id/card_picture"/>

            <TextView
                android:id="@+id/card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Akifumi"
                android:textAppearance="@style/profile_name"
                app:layout_constraintBottom_toTopOf="@id/card_work"
                app:layout_constraintStart_toStartOf="@id/card_work"/>

            <TextView
                android:id="@+id/card_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:layout_marginLeft="8dp"
                android:textAppearance="@style/profile_name"
                app:layout_constraintStart_toEndOf="@id/card_name"
                app:layout_constraintBottom_toBottomOf="@id/card_name"/>


            <Button
                android:id="@+id/edit_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_camera_enhance_black_24dp"
                android:background="@drawable/edit_picture_button_background"
                android:text="写真を変更"
                android:padding="6dp"
                android:minHeight="0dp"
                android:textSize="13sp"
                android:textColor="#696969"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

        </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_to_photos_white_35dp"
                android:background="@drawable/add_picture_button_background"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"/>

               <ImageView
                   android:layout_width="70dp"
                   android:layout_height="70dp"
                   android:scaleType="centerCrop"
                   android:src="@drawable/starwars"
                   android:layout_weight="1"
                   android:layout_marginHorizontal="2dp"/>

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/starwars"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="2dp"/>

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/starwars"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="2dp"/>

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/starwars"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="2dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自己紹介"
            android:textAppearance="@style/post_black"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:textColor="@color/colorsilver"
            android:text="こんにちは"
            android:padding="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textAppearance="@style/post_black"
            android:text="名前"
            android:layout_marginTop="15dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:textColor="@color/colorsilver"
            android:padding="10dp"
            android:text="Akifumi"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textAppearance="@style/post_black"
            android:text="現在の仕事"
            android:layout_marginTop="15dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:textColor="@color/colorsilver"
            android:padding="10dp"
            android:text="慶應大学"/>

    </LinearLayout>
</ScrollView>